<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.ressource.RessourceFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textInputLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title"
                    android:id="@+id/textinput_title"
                    android:layout_margin="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinput_layout_tags"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout"
                app:layout_constraintEnd_toEndOf="@+id/textInputLayout">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/tags_list"
                    android:id="@+id/Textinput_tags"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_type"
                app:layout_constraintTop_toBottomOf="@id/textinput_layout_tags"
                app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout"
                android:layout_margin="10dp"
                />

        <EditText
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:hint="@string/ressource"
                android:id="@+id/editText_ressource"
                app:layout_constraintTop_toBottomOf="@+id/spinner_type"
                app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout"
                android:layout_margin="10dp"/>

        <Button
                android:text="@string/fui_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_cancel"
                app:layout_constraintStart_toStartOf="@+id/textInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/editText_ressource"
                android:layout_margin="10dp"
                android:backgroundTint="@color/colorAccent"/>

        <Button
                android:text="@string/fui_button_text_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_save"
                app:layout_constraintEnd_toEndOf="@+id/textInputLayout"
                app:layout_constraintTop_toBottomOf="@+id/editText_ressource"
                android:layout_margin="10dp"
                android:backgroundTint="@color/colorPrimary"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>